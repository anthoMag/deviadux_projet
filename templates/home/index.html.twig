{% extends 'base.html.twig' %}

{% block title %}
	{{controller_name}}
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('asset/css/home.css') }}">
{% endblock %}
{% block body %}

	<header>

		<!-- Rond bg -->
		<div class="round"></div>

		<div class="round2"></div>
		<!-- Fin Rond bg -->

		<!-- DivVideoHeroShot -->
		<div id="videoDiv">
			<video preload="" autoplay="" muted="" playsinline="" loop="">
				<source src="./asset/video/heroshot.mp4" type="video/mp4">
			</video>
		</div>
		<!-- Fin DivVideoHeroShot -->

		<!-- heroShot -->
		<div class="container mt-5" id="titreHeroshot">
			<div class="row">
				<div class="col-2">
					<span></span>
				</div>
				<div class="col-8">
					<h1>Découvrez les zones les plus impactées par la montée des eaux en France
					</h1>
					<a id="butn" href="{{path ('app_cartes')}}">Voir les cartes</a>
				</div>
			</div>
		</div>
		<!-- Fin heroShot -->


		<!-- BarCookies à faire lorsqu'on actionne le "Button" croix A REMODULER -->
		<div class="container-fluid " id="barCookies">
			<div class="row">
				<div class="col align-items-end" id="cookiesBar">
					<div class="text-end">
						<button id="closeCookie"><img src="./asset/img/logopictoicone/iconecroixblanc.svg" alt="Picto croix"></button>
					</div>
					<div>
						<p>En poursuivant votre navigation sur ce site, vous acceptez l'utilisation de cookies pour réaliser des statistiques de visite. Pour en savoir plus
							<a id="cookiesLien" href="https://www.cnil.fr/fr/definition/cookie" target="_blank">cliquez ici.</a>
						</p>
					</div>
				</div>
			</div>
		</div>
		<!-- Fin BarCookies -->
	</header>

	<main>
		<article id="articleAlaUne">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<h1>Les articles à la une</h1>
					</div>
					<div class="col-12">
						<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
							<div class="carousel-indicators">
								<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active boutoncarrousel" aria-current="true" aria-label="Slide 1"></button>
								<button class="boutoncarrousel" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
								<button class="boutoncarrousel" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
							</div>
							<div class="carousel-inner">
								<div class="carousel-item active">
									<img src="./asset/img/img/article1.jpg" class="d-block w-100" alt="Dune du Pilat">
									<div class="carousel-caption d-none d-md-block">
										<h5>Les solutions fondées sur la nature</h5>
										<a href="{{path ('app_actualites')}}">En lire plus</a>
									</div>
								</div>
								<div class="carousel-item">
									<img src="./asset/img/img/article2.jpg" class="d-block w-100" alt="Inondation enfant sur dos d'un sauveteur">
									<div class="carousel-caption d-none d-md-block">
										<h5>La montée des eaux sera bien plus elevée et rapide que prévu</h5>
										<a href="{{path ('app_actualites')}}#art2">En lire plus</a>
									</div>
								</div>
								<div class="carousel-item">
									<img src="./asset/img/img/article3.jpg" class="d-block w-100" alt="maison et arbre inondé">
									<div class="carousel-caption d-none d-md-block">
										<h5>M'informer sur le géorisque d'inondation</h5>
										<a href="{{path ('app_actualites')}}#art3">En lire plus</a>
									</div>
								</div>
							</div>
							<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="visually-hidden">Previous</span>
							</button>
							<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="visually-hidden">Next</span>
							</button>
						</div>
					</div>
				</div>
			</div>
		</article>

		<section id="dataViz">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<h1>Données actuelles en France</h1>
					</div>
				</div>
			</div>

			<div class="container">
				<div class="row graphique align-items-center">
					<div class="col-lg-4 col-md-12 graphiqueText">
						<article>
							<h3>L'évolution croissante du
								<b>nombre d'épisodes</b>
								vigilance orange et rouge inondations sur le territoire</h3>
							<h4>
								<b class="source">Source: </b><a href="https://www.vigicrues.gouv.fr/ftp/bilan_annuel_vigilance.pdf" target="_blank">Bilan annuel VIGICRUE 2021 </a>
							</h4>
							<div class="d-flex text-center"> 
                                <div>
                                    <img src="./asset/img/logopictoicone/iconpartageblanc.svg" alt="Picto Partager" class="icon" data-bs-target="#Modal1" data-bs-toggle="modal">
                                    <p class="partagerEnregistrerText" >PARTAGER</p>
                                </div>
                                <div class="enregistrerIcon">
                                <img src="./asset/img/logopictoicone/Iconenregistrementblanc.svg" alt="Picto Enregistrer" class="icon2"  data-bs-target="#Modal2" data-bs-toggle="modal">
                                    <p class="partagerEnregistrerText" >ENREGISTRER</p>
                                </div>
                            </div>

						</article>
					</div>
					<div id="img-anim-hexa-container" class="col-lg-8 col-md-12">
						<img id="img-anim-hexa" class="img-fluid" src="./asset/img/logopictoicone/hexaanimate.svg" alt="Graphique Hexagone Animé" data-delay="5">
					</div>
				</div>
			</div>

			<div class="container">
				<div class="row graphique align-items-center">
					<div class="col-lg-8 col-md-12">
						<img id="img-anim-pluie" class="img-fluid" src="./asset/img/logopictoicone/pluieanimate.svg" alt="" data-delay="5">
					</div>
					<div class="col-lg-4 col-md-12 graphiqueText">
						<article>
							<h3>L'évolution de l'intensité des
								<b>pluies extrêmes</b>
								sur le sud du territoire</h3>
							<h4>
								<b class="source">Source: </b><a href="http://pluiesextremes.meteo.fr/france-metropole/Cartes-pluviometriques.html" target="_blank">Météo France</a>
							</h4>

							<div class="d-flex text-center"> 
                                <div>
                                    <img src="./asset/img/logopictoicone/iconpartageblanc.svg" alt="Picto Partager" class="icon" data-bs-target="#Modal1" data-bs-toggle="modal">
                                    <p class="partagerEnregistrerText" >PARTAGER</p>
                                </div>
                                <div class="enregistrerIcon">
                                <img src="./asset/img/logopictoicone/Iconenregistrementblanc.svg" alt="Picto Enregistrer" class="icon2"  data-bs-target="#Modal2" data-bs-toggle="modal">
                                    <p class="partagerEnregistrerText" >ENREGISTRER</p>
                                </div>
                            </div>
							</div>
						</article>
					</div>
				</div>
			</div>
		</section>
		{# <!-------------- Section Picto ---------> #}
        <section id="pictoInfo">
            <div class="container">
                <div class="row text-center">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <img class="img-fluid picto" src="./asset/img/logopictoicone/pictocarte.svg" alt="Picto Carte">
                        <p class="chiffrePicto">22K</p>
                        <h3><b>Km de cours d'eau</b><br>surveillés en permanence par Vigicrue.gouv</h3> 
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <img class="img-fluid picto" src="./asset/img/logopictoicone/pictomains.svg" alt="Picto Mains">
                        <p class="chiffrePicto">80</p>
                        <h3><b>Associations</b> d'aides aux personnes touchées par des phénoménes naturels</h3> 
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <img class="img-fluid picto " src="./asset/img/logopictoicone/pictoeau.svg" alt="Picto Eau">
                        <p class="chiffrePicto">20K</p>
                        <h3><b>Repères de crues</b><br>installés en France, témoins d'épisodes majeurs</h3> 
                    </div>
                </div>
            </div>
        </section>
        <!-------------- Fin Section Picto --------->


    <!------ Citation ------>
        <section id="citation">
            <div class="container">
                <div class="row text-center">
                    <div class="col">
                        <h2>" La communauté est une nappe affective souterraine et chacun boit la même eau à cette source "<br></h2> <p> Michel Henry - Philosophe - 1990</p>
                    </div>
                </div>
            </div>
        </section>
    <!------ Fin Citation ------>

		<!---------- Modale 1 PARTAGER ---------->
         <div class="modal fade bd-example-modal-lg" id="Modal1" tabindex="-1" aria-labelledby="ModalLabel1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
              <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h1 class="modal-title fs-5">Partagez ce graphique</h1>
                    <p>Si vous aimez ce graphique, partagez-le avec vos amis..</p>
                    <div class="row justify-content-md-center">
                        <div class="col-lg-2">
                            <a type="button" class="btn btn-primary">Facebook</a>
                        </div>
                        <div class="col-md-auto">
                            <a type="button" class="btn btn-primary">Instagram</a>
                        </div>
                        <div class="twitter col col-lg-2">
                            <a type="button" class="btn btn-primary">Twitter</a>
                        </div>
                    <p>Ou téléchargez les graphiques</p>
                        <div class="col-lg-2">
                            <a type="button" class="data btn btn-primary" href="./asset/img/graphique/dataviz.gif" target="_blank">GIF Episodes</a>
                        </div>
                        <div class="col-md-auto">
                            <a type="button" class="data btn btn-primary" href="./asset/img/graphique/datavizpluie.gif" target="_blank">GIF Pluies</a>
                        </div>
                    <p>407 partages</p>
                    </div>
                </div>
              </div>
            </div>
          </div>

	<!---------- Modale 2 ENREGISTRER ---------->
        <div class="modal fade modal-lg" id="Modal2" tabindex="-1" aria-labelledby="ModalLabel2" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close btn-close-white " data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h1 class="modal-title fs-5">Connectez-vous pour enregistrer<br> ce graphique.</h1>
                </div>
                <div class="modal-footer">
                <a href="{{ path('app_profil') }}" type="button" class="btn btn-black">Je me connecte</a>
                </div>
            </div>
            </div>
        </div>
          <!---------- Fin Modale 2 ENREGISTRER ---------->

	</main>
	

	{% block javascripts %}
		 <script src="./asset/js/home.js"></script> 
	{% endblock %}
{% endblock %}

